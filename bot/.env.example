# Required - Bot Configuration
BOT_TOKEN=your_discord_bot_token
OWNER_IDS=123456789012345678,987654321098765432

# Required - Database
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=heimdall_v1
REDIS_URL=redis://localhost:6379

# Required - Security
ENCRYPTION_KEY=generate_with_openssl_rand_hex_32
INTERNAL_API_KEY=generate_with_openssl_rand_hex_32

# Optional - Debugging
DEBUG_LOG=false
LOG_TO_FILE=false

# Optional - Sentry
SENTRY_DSN=
SENTRY_ENABLED=true

# Optional - API
API_PORT=3001
WS_PORT=3002
# Express trust proxy setting (default is 1 if unset)
# Examples: TRUST_PROXY=1 | TRUST_PROXY=true | TRUST_PROXY=false
TRUST_PROXY=1

# Required for Dashboard - Discord OAuth
DISCORD_CLIENT_ID=your_discord_application_client_id
DISCORD_CLIENT_SECRET=your_discord_application_client_secret
# NEXTAUTH_SECRET is the primary secret; AUTH_SECRET is treated as an alias.
NEXTAUTH_SECRET=generate_with_openssl_rand_hex_32
# AUTH_SECRET=generate_with_openssl_rand_hex_32
NEXTAUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true

# Required if NamelessMC plugin is enabled
NAMELESS_SITE_BASE_URL=https://forum.example.com
NAMELESS_API_KEY=your_nameless_api_key

# Optional - Dashboard
DASHBOARD_PORT=3000
WS_PUBLIC_URL=
NEXT_PUBLIC_WS_URL=ws://localhost:3002

# Optional - Misc
NANOID_LENGTH=12

# Optional - Comma-separated plugin names to skip loading (case-insensitive)
# Example: DISABLED_PLUGINS=namelessmc,modmail
DISABLED_PLUGINS=

# Optional - Single-Port Proxy (for PaaS like Railway, Render, Fly.io)
# When true, an nginx reverse proxy starts inside the container on $PORT and routes:
#   /ws       → WebSocket server (3002)
#   /bot-api/ → Bot REST API (3001), prefix stripped
#   /         → Dashboard (3000)
# Set WS_PUBLIC_URL=wss://yourdomain.com/ws when using this mode.
SINGLE_PORT_PROXY=false
# PORT is usually auto-set by PaaS platforms. Default: 8080
# PORT=8080

