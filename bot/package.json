{
  "name": "heimdall-v1",
  "version": "1.0.0",
  "description": "Heimdall Discord Bot - Plugin-based architecture",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch --exclude .next --exclude node_modules src/index.ts",
    "dev:bun": "bun run src/index.ts --watch",
    "start": "tsx src/index.ts",
    "start:bun": "bun run src/index.ts",
    "build": "bunx tsc && bun run build:dashboard",
    "build:dashboard": "cd plugins/dashboard/app && next build",
    "build:dashboard:analyze": "cd plugins/dashboard/app && ANALYZE=true next build",
    "build:prod": "npm run build && npm run build:dashboard",
    "start:prod": "NODE_ENV=production tsx src/index.ts",
    "start:prod:bun": "NODE_ENV=production bun run src/index.ts",
    "lint": "bunx eslint src/**/*.ts",
    "lint:fix": "bunx eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@sentry/node": "^10.23.0",
    "@tailwindcss/postcss": "^4.1.0",
    "@types/cors": "^2.8.19",
    "chrono-node": "2.8.5",
    "cors": "^2.8.6",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "fluent-ffmpeg": "^2.1.3",
    "lodash": "^4.17.23",
    "mongoose": "^8.19.2",
    "nanoid": "^5.1.6",
    "next": "^15.3.0",
    "next-auth": "5.0.0-beta.25",
    "nodejs-whisper": "^0.2.9",
    "rcon-client": "^4.2.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "redis": "^5.9.0",
    "sonner": "^2.0.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tailwindcss": "^4.1.0",
    "ws": "^8.18.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^5.0.5",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.5.12",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
